<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gadga.gua" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GuaApp</name>
    <description>
        Gua App - gadga.co
    </description>
    <author email="andi@gadga.co" href="http://gadga.co/">
      Gadga Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
    <icon src="icon.png" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.SplashScreen"/>
        <gap:splash src="res/splash/ldpi.png" gap:platform="android" gap:density="ldpi" />
        <gap:splash src="res/splash/mdpi.png" gap:platform="android" gap:density="mdpi" />
        <gap:splash src="res/splash/hdpi.png" gap:platform="android" gap:density="hdpi" />
        <gap:splash src="res/splash/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    </feature>

